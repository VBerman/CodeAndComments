<Window x:Class="CodeAndComments.Windows.ChooseFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeAndComments.Windows" xmlns:models="clr-namespace:CodeAndComments.Models"
        mc:Ignorable="d"
        Title="ChooseFilesWindow" Height="450" Width="800" Closing="Window_Closing">
    <!--<Window.DataContext>
        <models:ApplicationViewModel></models:ApplicationViewModel>
    </Window.DataContext>-->
    <Grid>
        <DataGrid ColumnWidth="*" ItemsSource="{Binding CurrentProject.FileList}" AutoGenerateColumns="False" IsReadOnly="True">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Path" Width="9*" Binding="{Binding CurrentFile}"/>
                <DataGridTemplateColumn Header="Usage" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsCurrent, Mode=TwoWay}" HorizontalAlignment="Center"> </CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>                
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
